    <section class="h-[35rem] grid gap-4 md:h-[30rem] md:grid-cols-2 lg:grid-cols-4">
        <TeamCard name="Thomas Mueler" alt="some people" src="/public/images/team/man_01.png"/>
        <TeamCard name="Daniel Salasar" alt="some people" src="/public/images/team/man_02.png"/>
        <TeamCard name="Eduardo Franco" alt="some people" src="/public/images/team/man_03.png"/>
        <TeamCard name="Max Alfredo" alt="some people" src="/public/images/team/man_04.png"/>
    </section>
